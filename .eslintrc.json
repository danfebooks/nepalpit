{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "plugins": [
		"import",
        "prettier",
        "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "project": "./tsconfig.json"
	},
    "ignorePatterns": ["**/dist/**", "**/lib/**", "**/module/**", "**/docs/**", "**/*.d.ts"],
    "rules": {
        "prettier/prettier": ["error"]
    }
}
