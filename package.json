{
  "name": "@danfebooks/nepalpit",
  "version": "0.1.1",
  "description": "Personal Income Tax (PIT) alculator utility for Nepal",
  "main": "./lib/danfebooks.pit.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danfebooks/nepalpit.git"
